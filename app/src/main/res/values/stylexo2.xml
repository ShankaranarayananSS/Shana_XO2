<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Table Rows Style-->
    <style name="TableRows">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--Outside Frame Boxes-->
    <style name="FrameBoxes">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <!--XO Button Styles-->
    <style name="XOButtons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="strokeWidth">2.5dp</item>
        <item name="strokeColor">#000</item>
        <item name="android:backgroundTint">#80B4E50D</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <!--XO Text Styles-->
    <style name="XOText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>